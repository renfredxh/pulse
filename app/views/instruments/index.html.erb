<h1>Instruments</h1>
<% @instruments.each do |instrument| %>
  <div class="instrument">
    <div class="title"><%= instrument.name %></div>
    <div class="trigger-pad <%= instrument.category %>" 
      data-audio="<%= instrument.samples[0].path %>" id="<%= instrument.id %>"></div>
  </div>
<% end %>
<%= javascript_include_tag "pads" %>
